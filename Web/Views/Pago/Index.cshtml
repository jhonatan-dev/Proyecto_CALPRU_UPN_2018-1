@model Web.Models.ViewModels.SolicitudPago

@{
    ViewBag.Title = "Solicitud Pago";
}

<div class="row">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-body">
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <h3 class="box-title m-b-0">Solicitud de Pago</h3>
                <p class="text-muted m-b-30 font-13"> <b>Cajero:</b> @ViewBag.NombreCajero </p>

                @using (Html.BeginForm("ObtenerPrestamoConCuotasPendientes", "Pago", FormMethod.Post))
                {
                    <div class="form-group row">
                        <label for="DniCliente" class="col-sm-3 text-right control-label col-form-label">DNI Cliente*</label>
                        <div class="col-sm-9">
                            @Html.EditorFor(model => model.DniCliente, new { htmlAttributes = new { @class = "form-control", @required = "" } })
                            @Html.ValidationMessageFor(model => model.DniCliente, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="CodigoPrestamo" class="col-sm-3 text-right control-label col-form-label">Código de Préstamo*</label>
                        <div class="col-sm-9">
                            @Html.EditorFor(model => model.CodigoPrestamo, new { htmlAttributes = new { @class = "form-control", @required = "" } })
                            @Html.ValidationMessageFor(model => model.CodigoPrestamo, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group m-b-0">
                        <div class="offset-sm-3 col-sm-9">
                            <button type="submit" class="btn btn-info waves-effect waves-light m-t-10">Procesar Solicitud</button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>